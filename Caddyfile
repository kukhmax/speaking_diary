diary.pw-new.club {
    encode gzip

    # Логи (опционально)
    log {
        output stdout
        format json
    }

    # Проксируем API-запросы на backend
    handle /api* {
        reverse_proxy backend:5000
    }

    # Все остальные запросы — на фронтенд
    handle {
        reverse_proxy frontend:80
    }
}

# TPW — обслуживаем по двум доменам (pw-new.club и pw.pw-new.club)
pw-new.club, pw.pw-new.club {
    encode gzip

    # Логи (опционально)
    log {
        output stdout
        format json
    }

    # Контейнер TPW должен быть доступен в сети `web` под alias `weaver`
    reverse_proxy weaver:80
}