# Database Configuration
# Для локальной разработки используйте SQLite (по умолчанию)
# DATABASE_URL=sqlite:///diary.db

# Для продакшена используйте PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/diary_db

# Groq API Key (FREE - регистрация на https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Optional: OpenAI API Key (если хотите использовать OpenAI Whisper)
# OPENAI_API_KEY=your_openai_api_key_here

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# ===== TTS (optional) =====
# Allow gTTS fallback for Portuguese (pt-PT) when Edge TTS fails
# WARNING: gTTS 'pt' uses Brazilian accent. Default is false.
ALLOW_PT_GTTs_FALLBACK=false

# Edge TTS voice overrides (optional)
# EDGE_TTS_VOICE=
# EDGE_TTS_PT_VOICE=